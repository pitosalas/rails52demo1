<% content_for :title_area do %>
  Original Texts
<% end %>
<div data-controller="content">
<table class="table">
  <thead>
    <tr>
      <th>Original Text</th>
      <th>Language</th>
      <th>Translations</th>
      <th colspan="3">Originals</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "content", collection: @contents %>
  </tbody>
</table>
<%= link_to 'New Original Text', new_content_path, class:"button" %>
<button class="button"  
        data-action="click->content#translation">New Original Text
</button>

<%= render("modal_new", content: @content) %>
</div>